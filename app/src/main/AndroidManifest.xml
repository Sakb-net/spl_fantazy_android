<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sakb.spl">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".app.SplApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppThemeNormal">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNormal">
        </activity>

        <activity android:name=".ui.splash.SplashActivity" android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.playerprofile.PlayerProfileActivity"/>


        <activity android:name=".ui.addplayer.AddPlayerActivity"/>

        <activity android:name=".ui.detailsvideo.DetailsVideoActivity"
            android:theme="@style/AppThemeNormal"/>

        <activity android:name=".ui.newdetails.NewsDetailsActivity" android:theme="@style/AppThemeNormal"/>


        <activity android:name=".ui.terms.TermsActivity" android:theme="@style/AppThemeNormal"/>

        <activity android:name=".ui.chooseteam.ChooseFavTeamActivity"/>

        <activity android:name=".ui.newpass.CreatePassActivity" android:theme="@style/FormsTheme" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.forgotpassword.ForgotPassActivity" android:theme="@style/FormsTheme" android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".ui.register.RegisterActivity" android:theme="@style/FormsTheme" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".ui.login.LoginActivity" android:theme="@style/FormsTheme" android:windowSoftInputMode="stateHidden|adjustResize"/>

    </application>

</manifest>