<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="oval">
            <size android:height="80dp"
                android:width="80dp"/>

            <padding android:top="5dp"
                android:bottom="5dp"
                android:right="5dp"
                android:left="5dp"/>
            <stroke
                android:width="1dp"
                android:color="#707070"/>
        </shape>
    </item>

    <item>
        <shape
            android:shape="oval">
            <size android:height="80dp"
                android:width="80dp"/>
            <solid
                android:color="@color/colorGreen"/>
        </shape>
    </item>
</layer-list>