<resources>

    <!--  Base application theme.  -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/helvetica_reg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>
    <style name="AppThemeNormal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/helvetica_reg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:actionMenuTextColor">@color/white</item>
    </style>
    <style name="home_style" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="button_green">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">42.24dp</item>
        <item name="android:background">@drawable/button_home</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="button_green_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">42.24dp</item>
        <item name="android:background">@drawable/button_home</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorGreen</item>
        <item name="android:textColorSecondary">@color/colorGrey</item>
    </style>
    <style name="button_green_small_rounded">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_home_rounded</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="formEditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:ems">10</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>
    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <!--  Customize your theme here.  -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>
    <style name="checkTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/edittextTextColor</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>
    <style name="contactus_form">
        <item name="android:textColorHint">@color/form_ed</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="matchesTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/tab_background</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabSelectedTextColor">@color/selected_tab_text</item>
        <item name="tabTextAppearance">@style/customTabTextAppeareance</item>
        <item name="tabIndicatorHeight">3dp</item>
    </style>
    <style name="customTabTextAppeareance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>
    <style name="TextInputLayout">
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>
    <style name="HintTextAppearance" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--  Splash screen custom theme  -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="FormsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="fontFamily">@font/helvetica_reg</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@drawable/bg</item>
    </style>
    <style name="ActionBar.SemiTransp" parent="Base.Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome|showTitle</item>
    </style>
    <style name="AppThemeOverlay" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBarOverlay">true</item>
    </style>
    <style name="ToolbarThemeBack" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--
         Customize color of navigation drawer icon and back arrow
        -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="MaterialThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
    </style>


</resources>
