<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.leagueorder.LeagueOrderFragment">

        <FrameLayout
            android:id="@+id/custom_ttolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_bg"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:fitsSystemWindows="true"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:elevation="12dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/filterParentLL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F2F2F2"
                        android:minHeight="100dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/filterLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F2F2F2"
                            android:minHeight="50dp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/land_Tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="@string/on_his_land_or_not"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/win_lose_Tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="@string/win_or_lose"
                                android:textSize="14sp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/viewByTour_Tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                            android:drawablePadding="12dp"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:text="@string/view_by_tour"
                            android:textSize="14sp" />
                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/land_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/helvetica_reg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/win_lose_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/helvetica_reg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/view_by_tour_spinner"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/helvetica_reg"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:spinnerMode="dialog"
                        android:textAlignment="center"
                        android:visibility="invisible" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_bg">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_43sdp"
                                android:background="@color/colorPrimary"
                                android:orientation="horizontal"
                                android:weightSum="6.5">

                                <View
                                    android:id="@+id/tvName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="2"
                                    android:gravity="center"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvPlay"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:text="@string/play"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvWin"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.5"
                                    android:gravity="center"
                                    android:text="@string/w"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvBalance"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.5"
                                    android:gravity="center"
                                    android:text="@string/d"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvLose"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.5"
                                    android:gravity="center"
                                    android:text="@string/l"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvRem"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:text="@string/rem"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvPoint"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:text="@string/pts"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/more"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/margin"
                                    android:layout_marginEnd="@dimen/margin"
                                    android:layout_weight="0.75"
                                    android:gravity="center"
                                    android:textAllCaps="true"
                                    android:textColor="@android:color/white"
                                    android:textSize="@dimen/_8ssp"
                                    android:textStyle="normal" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvClub"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:itemCount="10"
                                tools:listitem="@layout/item_league_ranking" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </FrameLayout>
</layout>
