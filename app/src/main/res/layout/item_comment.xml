<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:appGithub="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_repo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        appGithub:layout_constraintStart_toStartOf="parent"
        appGithub:layout_constraintTop_toTopOf="parent"
        tools:text="Jake Wharton Library" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_repo_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/_12ssp"
        appGithub:layout_constraintStart_toStartOf="parent"
        appGithub:layout_constraintTop_toBottomOf="@+id/tv_repo_name"
        tools:text="Jake wharton library is an open source library to fetch github repos library" />

</androidx.constraintlayout.widget.ConstraintLayout>
