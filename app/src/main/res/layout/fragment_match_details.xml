<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".ui.matches.MatchDetailsFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:elevation="8dp"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team1_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.75"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"
                        tools:text="النادي" />

                    <ImageView
                        android:id="@+id/team1_iv"
                        android:layout_width="@dimen/_46sdp"
                        android:layout_height="@dimen/_46sdp"
                        android:layout_gravity="center"
                        tools:src="@mipmap/ic_launcher" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/date_result_team_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="1" />

                    <TextView
                        android:id="@+id/date_result_team_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:background="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="8dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        tools:text="2" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/team2_iv"
                        android:layout_width="@dimen/_46sdp"
                        android:layout_height="@dimen/_46sdp"
                        android:layout_gravity="center"
                        tools:src="@mipmap/ic_launcher" />


                    <TextView
                        android:id="@+id/team2_tv"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.75"
                        android:gravity="center"
                        android:textColor="@color/colorGrey"
                        tools:text="االهلال " />

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/cvGame">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/goalsTv"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bludeSelectedSetting"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/goals"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/goals_tv1"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/goals_tv2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/assistTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/bludeSelectedSetting"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/assist"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llAssist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/assist_tv1"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/assist_tv2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/concededTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@color/bludeSelectedSetting"
                    android:gravity="center"
                    android:visibility="gone"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/Conceded"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/llConceded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/conceded_tv1"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/conceded_tv2"
                        android:layout_width="0dp"
                        android:layout_weight="0.5"
                        android:gravity="center_horizontal"
                        android:background="@drawable/bg_result"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_5sdp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>