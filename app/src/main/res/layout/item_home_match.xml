<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="8dp"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:background="?attr/selectableItemBackground"
        app:cardCornerRadius="4dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:focusable="true">










            <LinearLayout android:layout_width="match_parent"
                android:orientation="horizontal"
                android:fontFamily="@font/helvetica_reg"
                android:id="@+id/linear"
                app:layout_constraintTop_toBottomOf="@+id/date"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        tools:src="@mipmap/ic_launcher"
                        android:id="@+id/team1_iv"
                        android:layout_marginTop="16dp"

                        />

                    <TextView
                        android:layout_gravity="center"
                        android:fontFamily="@font/helvetica_reg"
                        android:gravity="center"
                        app:layout_constrainedWidth="true"
                        tools:text="النادي"
                        android:textColor="@color/colorGrey"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/team1_tv"
                        android:layout_marginTop="8dp"

                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"

                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@font/helvetica_reg"
                        android:textColor="#303030"
                        tools:text="122:112"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/date_result"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@+id/team1_iv"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/team2_iv"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView15"/>
                </LinearLayout>


                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="@dimen/_36sdp"
                        android:src="@mipmap/ic_launcher"
                        android:id="@+id/team2_iv"
                        android:layout_marginTop="16dp"
                        />


                    <TextView
                        android:fontFamily="@font/helvetica_reg"
                        android:layout_gravity="center"
                        tools:text="االهلال "
                        tools:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/team2_tv"
                        android:textColor="@color/colorGrey"
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"/>

                </LinearLayout>

            </LinearLayout>















    </androidx.cardview.widget.CardView>
</layout>