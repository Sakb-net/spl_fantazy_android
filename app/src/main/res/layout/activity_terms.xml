<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.terms.TermsActivity">


        <FrameLayout
            android:id="@+id/custom_ttolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/header_bg"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content" />


        </FrameLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:fitsSystemWindows="true"
                android:clipToPadding="false"

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="40dp"
                    android:gravity="start|center"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="16dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <TextView
                        android:fontFamily="@font/helvetica_reg"
                        android:includeFontPadding="false"
                        android:layout_marginStart="10dp"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:id="@+id/toolbarTitle"
                        android:textStyle="bold"
                        tools:text="fffffffffffff"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_marginTop="16dp"
                    android:elevation="12dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/layout_bg"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:fontFamily="@font/helvetica_reg"
                        android:includeFontPadding="false"
                        android:padding="@dimen/_8sdp"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#515151"
                        android:layout_width="match_parent"
                        android:id="@+id/terms"
                        tools:text="cvcvcvcvcvcvcvc
vcvcvc
vcvcvcvc
vcvcvcvcvcvc"
                        android:layout_height="wrap_content" />

                    <CheckBox
                        android:fontFamily="@font/helvetica_reg"
                        android:includeFontPadding="false"
                        android:buttonTint="@color/colorGreen"
                        android:id="@+id/checkbox"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:checked="true"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/i_read_terms_and_conditions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <Button

                        android:layout_gravity="center"
                        android:fontFamily="@font/helvetica_reg"
                        android:includeFontPadding="false"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="16dp"
                        app:backgroundTint="@color/colorButton"
                        android:text="@string/start"
                        android:id="@+id/buttonStart"
                        style="@style/button_green_small"


                        app:layout_constraintTop_toBottomOf="@+id/tv_forgotPass"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>