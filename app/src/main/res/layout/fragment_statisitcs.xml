<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/custom_ttolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_bg"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:fitsSystemWindows="true"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="16dp"
                        android:elevation="12dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/filterLL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F2F2F2"
                            android:minHeight="50dp"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/sortBy_Tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableEnd="@drawable/ic_sort"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="@string/sort_"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/allTeams_Tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="8dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="@string/all_teams"
                                android:textSize="14sp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/allPlayers_Tv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_8sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:drawableEnd="@drawable/ic_expand_more_black_24dp"
                                android:drawablePadding="12dp"
                                android:gravity="center_vertical"
                                android:padding="8dp"
                                android:text="@string/all_players"
                                android:textSize="14sp" />


                        </androidx.appcompat.widget.LinearLayoutCompat>
                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/player_spinner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helvetica_reg"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:spinnerMode="dialog"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/options_spinner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helvetica_reg"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:spinnerMode="dialog"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                        <androidx.appcompat.widget.AppCompatSpinner
                            android:id="@+id/teams_spinner"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/helvetica_reg"
                            android:gravity="center"
                            android:includeFontPadding="false"
                            android:spinnerMode="dialog"
                            android:textAlignment="center"
                            android:visibility="invisible" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/layout_bg">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                    <androidx.appcompat.widget.LinearLayoutCompat
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_60sdp"
                                        android:background="@color/colorPrimary"
                                        android:orientation="horizontal"
                                        android:weightSum="7.25">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtName"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/player"
                                            android:layout_weight="2"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textSize="@dimen/_8ssp"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtPrice"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/price"
                                            android:layout_weight="0.75"
                                            android:textAllCaps="true"
                                            android:textSize="@dimen/_8ssp"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtSell"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:layout_weight="0.75"
                                            android:text="@string/sell"
                                            android:textSize="@dimen/_8ssp"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtBuy"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/buy"
                                            android:textSize="@dimen/_8ssp"
                                            android:layout_weight="0.75"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtFrom"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/from"
                                            android:layout_weight="0.75"
                                            android:textSize="@dimen/_8ssp"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtPoint"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/point"
                                            android:layout_weight="0.75"
                                            android:textSize="@dimen/_8ssp"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/txtNextMatch"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/margin"
                                            android:layout_marginEnd="@dimen/margin"
                                            android:gravity="center"
                                            android:text="@string/next_match_"
                                            android:layout_weight="1.5"
                                            android:textSize="@dimen/_8ssp"
                                            android:textAllCaps="true"
                                            android:textColor="@android:color/white"
                                            android:textStyle="normal" />
                                    </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rvClub"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.core.widget.NestedScrollView>
        </FrameLayout>
    </RelativeLayout>
</layout>